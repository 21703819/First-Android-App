<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalculatorFragment">

    <TextView
        android:id="@+id/text_visor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6A6A6A"
        android:gravity="end"
        android:padding="16dp"
        android:text="@string/_0"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <Button
                android:id="@+id/button_clear_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#CCCCCC"
                android:text="C"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_clear_last"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#CCCCCC"
                android:text="&lt;"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_last_equation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/holo_orange_dark"
                android:text="L"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_divide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/holo_orange_dark"
                android:tag="/"
                android:text="/"
                android:textColor="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:tag="7"
                android:text="7"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:tag="8"
                android:text="8"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:tag="9"
                android:text="9"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_multiplicate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/holo_orange_dark"
                android:tag="*"
                android:text="*"
                android:textColor="#FFFFFF" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:tag="4"
                android:text="4"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:tag="5"
                android:text="5"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:tag="6"
                android:text="6"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_sub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/holo_orange_dark"
                android:tag="-"
                android:text="-"
                android:textColor="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:tag="1"
                android:text="1"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:tag="2"
                android:text="2"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:tag="3"
                android:text="3"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_adition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/holo_orange_dark"
                android:tag="+"
                android:text="+"
                android:textColor="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_span="2"
                android:background="@android:color/darker_gray"
                android:tag="0"
                android:text="0"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_dot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/darker_gray"
                android:tag="."
                android:text="."
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button_equals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/holo_orange_dark"
                android:text="="
                android:textColor="#FFFFFF" />

        </TableRow>

    </TableLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:contentDescription="@string/submit"
        android:id="@+id/fab"
        android:layout_gravity="end|bottom"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_my_icon"
        app:floatingActionButtonColor="@color/colorAccent" />

</LinearLayout>

