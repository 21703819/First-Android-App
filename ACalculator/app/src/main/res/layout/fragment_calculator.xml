<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorFragment">

    <TextView
        android:id="@+id/text_visor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6A6A6A"
        android:gravity="end"
        android:padding="16dp"
        android:text="@string/_0"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:tag="@string/portrait"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <Button
                    android:id="@+id/button_clear_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="C"
                    android:onClick="onClickClearAll"
                    android:background="#CCCCCC"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/button_clear_last"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="&lt;"
                    android:onClick="onClickDelete"
                    android:background="#CCCCCC"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/button_last_equation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="L"
                    android:background="@android:color/holo_orange_dark"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/button_divide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="/"
                    android:tag="/"
                    android:onClick="onClickSymbol"
                    android:background="@android:color/holo_orange_dark"
                    android:textColor="#FFFFFF" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="7"
                    android:onClick="onClickNumber"
                    android:tag="7"
                    android:background="@android:color/darker_gray"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/button_8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="8"
                    android:tag="8"
                    android:onClick="onClickNumber"
                    android:background="@android:color/darker_gray"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/button_9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="9"
                    android:tag="9"
                    android:onClick="onClickNumber"
                    android:background="@android:color/darker_gray"
                    android:textColor="#FFFFFF" />
                <Button
                    android:id="@+id/button_multiplicate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="*"
                    android:tag="*"
                    android:onClick="onClickSymbol"
                    android:background="@android:color/holo_orange_dark"
                    android:textColor="#FFFFFF" />

            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/button_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="4"
                    android:tag="4"
                    android:onClick="onClickNumber"
                    android:background="@android:color/darker_gray"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/button_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="5"
                    android:tag="5"
                    android:onClick="onClickNumber"
                    android:background="@android:color/darker_gray"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/button_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="6"
                    android:tag="6"
                    android:onClick="onClickNumber"
                    android:background="@android:color/darker_gray"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/button_sub"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="-"
                    android:tag="-"
                    android:onClick="onClickSymbol"
                    android:background="@android:color/holo_orange_dark"
                    android:textColor="#FFFFFF" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="1"
                    android:tag="1"
                    android:background="@android:color/darker_gray"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="2"
                    android:tag="2"
                    android:onClick="onClickNumber"
                    android:background="@android:color/darker_gray"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/button_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="3"
                    android:tag="3"
                    android:onClick="onClickNumber"
                    android:background="@android:color/darker_gray"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/button_adition"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="+"
                    android:tag="+"
                    android:onClick="onClickSymbol"
                    android:background="@android:color/holo_orange_dark"
                    android:textColor="#FFFFFF" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_span="2"
                    android:text="0"
                    android:tag="0"
                    android:background="@android:color/darker_gray"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/button_dot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="."
                    android:tag="."
                    android:onClick="onClickSymbol"
                    android:background="@android:color/darker_gray"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/button_equals"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="="
                    android:onClick="onClickEquals"
                    android:background="@android:color/holo_orange_dark"
                    android:textColor="#FFFFFF" />

            </TableRow>

        </TableLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|bottom"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:contentDescription="@string/submit"
            app:floatingActionButtonColor="@color/colorAccent"
            android:src="@drawable/ic_my_icon"
            android:layout_margin="16dp"
            android:onClick="onClickFabButton"/>




</FrameLayout>